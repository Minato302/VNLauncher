<Window x:Class="VNLauncher.Windows.SettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VNLauncher.Controls"
        mc:Ignorable="d" 
        Title="设置" Height="600" Width="900"
        WindowStartupLocation="CenterScreen" WindowStyle="None" AllowsTransparency="True">
    <Grid Name="mainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Name="settingItemListColumn" Width="2*"/>
            <ColumnDefinition Name="settingInfoColumn" Width="8*"/>
        </Grid.ColumnDefinitions>
        <Grid Name="settingItemListGrid" Grid.Column="0" Background="{StaticResource backgroundColor_Dark}">
            <Grid.RowDefinitions>
                <RowDefinition Name="textRow1" Height="auto"/>
                <RowDefinition Name="textRow2" Height="auto"/>
                <RowDefinition Height="40"/>
                <RowDefinition Name="itemListRow" Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock x:Name="settingText1" Margin="20,20,10,5" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Left" Text="VNLuncher" Foreground="{StaticResource iconColor}" FontSize="20"/>
            <TextBlock x:Name="settingText2" Margin="20,0,10,30" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Left" Text="设置" Foreground="{StaticResource iconColor}" FontSize="24"/>
            <StackPanel Name="settingItemStackPanel" Grid.Row="3">
                <local:SettingWindowSetItemButton x:Name="keymappingButton" SettingWindowSetItemButtonIcon="KeyboardOutline" SettingWindowSetItemButtonText="键位映射" Click="KeymappingButton_Click"/>
                <local:SettingWindowSetItemButton x:Name="ocrSettingButton" SettingWindowSetItemButtonIcon="Search" SettingWindowSetItemButtonText="OCR设置" Click="OcrSettingButton_Click"/>
                <local:SettingWindowSetItemButton x:Name="baiduTranslateSettingButton" SettingWindowSetItemButtonIcon="Cloud" SettingWindowSetItemButtonText="百度翻译设置" Click="BaiduTranslateSettingButton_Click"/>
                <local:SettingWindowSetItemButton x:Name="gptTranslateSettingButton" SettingWindowSetItemButtonIcon="Send" SettingWindowSetItemButtonText="GPT翻译设置" Click="GptTranslateSettingButton_Click"/>
                <local:SettingWindowSetItemButton x:Name="localTranslateSettingButton" SettingWindowSetItemButtonIcon="TV" SettingWindowSetItemButtonText="本地模型翻译设置" Click="LocalTranslateSettingButton_Click"/>
                <local:SettingWindowSetItemButton x:Name="aboutButton" SettingWindowSetItemButtonIcon="QuestionCircle" SettingWindowSetItemButtonText="关于VNLuncher" Click="AboutButton_Click"/>
            </StackPanel>
        </Grid>
        <Grid Name="settingInfoGrid" Grid.Column="1" Background="{StaticResource backgroundColor_Light}">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Name="titleGrid" Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Name="titlebarEmptyColumn"/>
                    <ColumnDefinition Name="titlebarMinimizeColumn" Width="40"/>
                    <ColumnDefinition Name="titlebarCloseColumn" Width="40"/>
                </Grid.ColumnDefinitions>
                <Grid  Background="Transparent"/>
                <local:TitleBarButton x:Name="minimizeButton" Grid.Column="1" TitleBarButtonIcon="Minus" Click="MinimizeButton_Click"/>
                <local:TitleBarButton x:Name="closeButton" Grid.Column="3" TitleBarButtonIcon="Times" Click="CloseButton_Click"/>
            </Grid>
            <Frame NavigationUIVisibility="Hidden" Name="settingInfoFrame" Grid.Row="1"/>
        </Grid>
    </Grid>
</Window>
