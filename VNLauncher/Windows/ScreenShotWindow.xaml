<Window x:Class="VNLauncher.Windows.ScreenShotWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VNLauncher.Windows"
        mc:Ignorable="d"
        Title="ScreenShotWindow" Height="200" Width="300" AllowsTransparency="True" WindowStyle="None" Loaded="Window_Loaded" Topmost="True">
    <Canvas Background="{StaticResource backgroundColor_Dark}">
        <TextBlock Name="mainTextBlockName" Text="截屏成功！" Foreground="{StaticResource iconColor}" Canvas.Top="10" Canvas.Left="20" FontSize="14"/>
        <Image Name="captureImage" Width="260" Height="150" Canvas.Top="40" Canvas.Left="20" Stretch="UniformToFill"/>
    </Canvas>
</Window>
