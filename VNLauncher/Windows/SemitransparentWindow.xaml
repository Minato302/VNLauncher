<Window x:Class="VNLauncher.Windows.SemitransparentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VNLauncher.Windows"
        mc:Ignorable="d"  Background="#77FFFFFF" Topmost="True" AllowsTransparency="True" WindowStyle="None" PreviewMouseLeftButtonDown="Window_MouseLeftButtonDown" PreviewMouseMove="Window_PreviewMouseMove">
    <Canvas Name="mainCanvas">
        <Grid Name="upSemiTransparentGrid" Background="#77FFFFFF"/>
        <Grid Name="leftSemiTransparentGrid" Background="#77FFFFFF"/>
        <Grid Name="rightSemiTransparentGrid" Background="#77FFFFFF"/>
        <Grid Name="downSemiTransparentGrid" Background="#77FFFFFF"/>
    </Canvas>
</Window>
