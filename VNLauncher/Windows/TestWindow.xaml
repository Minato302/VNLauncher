<Window x:Class="VNLauncher.Windows.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VNLauncher.Controls"
        mc:Ignorable="d"
        Title="TestWindow" Height="450" Width="800">
    <Border x:Name="scanModePopupMainBorder" Width="220" Height="100" Background="{StaticResource marqueeBackgroundColor}" CornerRadius="10">
        <Canvas Background="Transparent" Name="scanModePopupMainCanvas">
            <local:MarqueeButton Canvas.Top="20" Canvas.Left="20" MarqueeButtonText="取消窗口UI"/>
            <local:MarqueeButton Canvas.Top="20" Canvas.Left="120" MarqueeButtonText="恢复窗口UI"/>
            <local:MarqueeButton Canvas.Top="60" Canvas.Left="20" MarqueeButtonText="窗口最大化"/>
            <local:MarqueeButton Canvas.Top="60" Canvas.Left="120" MarqueeButtonText="窗口恢复"/>
        </Canvas>
    </Border>
</Window>
