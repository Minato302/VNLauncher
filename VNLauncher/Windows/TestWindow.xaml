<Window x:Class="VNLauncher.Windows.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VNLauncher.Controls"
        mc:Ignorable="d"
        Title="TestWindow" Height="450" Width="800">
    <Border Width="300" Height="170" Background="{StaticResource marqueePopupBackgroundColor}" CornerRadius="10">
        <Canvas Background="Transparent">
            <TextBlock Text="OCR选择" Canvas.Top="10" Canvas.Left="13" FontSize="16"/>
            <local:MarqueeRadioButton MarqueeRadioButtonText="本地OCR" Canvas.Left="30" Canvas.Top="40"/>
            <local:MarqueeRadioButton MarqueeRadioButtonText="在线OCR" Canvas.Left="160" Canvas.Top="40"/>
            <TextBlock Text="翻译选择" Canvas.Top="70" Canvas.Left="13" FontSize="16"/>
            <local:MarqueeRadioButton MarqueeRadioButtonText="百度翻译" Canvas.Left="30" Canvas.Top="100"/>
            <local:MarqueeRadioButton MarqueeRadioButtonText="在线大模型" Canvas.Left="160" Canvas.Top="100"/>
            <local:MarqueeRadioButton MarqueeRadioButtonText="本地模型" Canvas.Left="30" Canvas.Top="130"/>
        </Canvas>
    </Border>
</Window>
