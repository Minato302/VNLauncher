<Application x:Class="VNLauncher.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:VNLauncher"
             StartupUri="/VNLauncher;component/Windows/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/VNLauncher;component/Themes/FrontColor.xaml"/>
                <ResourceDictionary Source="/VNLauncher;component/Themes/MainWindowScrollStyle.xaml"/>
                <ResourceDictionary Source="/VNLauncher;component/Themes/MarqueeSliderStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="Control">
                <Setter Property="Focusable" Value="False"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
